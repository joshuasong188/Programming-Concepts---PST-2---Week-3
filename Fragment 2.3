def check_in(student_id: int, course_id: str, timestamp: Optional[str] = None) -> None:
    if timestamp is None:
        timestamp = datetime.datetime.now().isoformat()
    check_in_record = {
        "student_id": student_id,
        "course_id": course_id,
        "timestamp": timestamp
    }
    app_data["attendance"].append(check_in_record)
    print(f"Receptionist: Student {student_id} checked into {course_id} at {timestamp}.")

def print_student_card(student_id: int) -> None:
    student_to_print = next((s for s in app_data["students"] if s["id"] == student_id), None)
    if student_to_print:
        filename = f"{student_id}_card.txt"
        with open(filename, "w") as f:
            f.write("========================\n")
            f.write(f"  MUSIC SCHOOL ID BADGE\n")
            f.write("========================\n")
            f.write(f"ID: {student_to_print['id']}\n")
            f.write(f"Name: {student_to_print['name']}\n")
            courses = student_to_print.get("enrolled_in", [])
            f.write(f"Enrolled In: {', '.join(courses) if courses else 'â€”'}\n")
        print(f"Printed student card to {filename}.")
    else:
        print(f"Error: Could not print card, student {student_id} not found.")
